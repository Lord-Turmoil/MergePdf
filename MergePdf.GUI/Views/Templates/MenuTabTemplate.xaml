<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="MenuTabHeaderTemplate">
        <Label
            Style="{StaticResource MenuTabTitle}"
            Content="{Binding Title}" />
    </DataTemplate>
    <DataTemplate x:Key="MenuTabContentTemplate">
        <TextBlock
            Style="{StaticResource MenuTabDescription}"
            Text="{Binding Description}" />
    </DataTemplate>
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="FileListTemplate">
        <TextBlock Grid.Column="0" Text="{Binding Filename}" Style="{StaticResource FilenameText}">
            <TextBlock.ToolTip>
                <TextBlock Text="{Binding Path}" Style="{StaticResource PathText}" />
            </TextBlock.ToolTip>
        </TextBlock>
    </DataTemplate>
</ResourceDictionary>